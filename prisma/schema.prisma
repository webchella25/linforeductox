  @@map("schema_config")
}

model RobotsConfig {
  id          String   @id @default(cuid())
  
  content     String   @db.Text
  active      Boolean  @default(true)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("robots_config")
}

model SitemapConfig {
  id              String   @id @default(cuid())
  
  customUrls      Json?
  
  excludedPaths   String[] @default([])
  
  lastGenerated   DateTime?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@map("sitemap_config")
}

