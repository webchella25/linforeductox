}

model AboutConfig {
  id                String   @id @default(cuid())
  
  heroImage         String?
  heroTitle         String   @default("Aline Vidal")
  heroSubtitle      String   @default("Especialista en Medicina Ancestral Oriental")
  
  biography         String   @db.Text
  secondaryImage    String?
  
  philosophy        String   @default("") @db.Text
  
  yearsExperience   Int      @default(0)
  certifications    String[] @default([])
  
  videoUrl          String?
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  @@map("about_config")
}

model SocialMediaConfig {
  id          String   @id @default(cuid())
  
  instagram   String?
  facebook    String?
  tiktok      String?
  youtube     String?
  linkedin    String?
  
  showInstagram Boolean @default(true)
  showFacebook  Boolean @default(true)
  showTiktok    Boolean @default(false)
  showYoutube   Boolean @default(false)
  showLinkedin  Boolean @default(false)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("social_media_config")
}

model HomeSection {
  id          String   @id @default(cuid())
  
  type        String
  title       String
  subtitle    String?
  content     String?  @db.Text
  image       String?
  
  active      Boolean  @default(true)
  order       Int      @default(0)
  
  config      Json?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("home_sections")
}

model SeoAnalytics {
  id                      String   @id @default(cuid())
  
  googleSearchConsole     String?
  googleAnalyticsId       String?
  metaPixelId             String?
  googleTagManagerId      String?
  
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
  
  @@map("seo_analytics")
}

model PageMeta {
  id              String   @id @default(cuid())
  
  pagePath        String   @unique
  pageTitle       String
  
  metaTitle       String?  @db.VarChar(60)
  metaDescription String?  @db.VarChar(160)
  metaKeywords    String?  @db.Text
  canonicalUrl    String?
  
  ogTitle         String?  @db.VarChar(60)
  ogDescription   String?  @db.VarChar(160)
  ogImage         String?
