model ProductCategory {
  id          String    @id @default(cuid())
  name        String    @unique
  slug        String    @unique
  description String?   @db.Text
  icon        String    @default("üì¶")
  active      Boolean   @default(true)
  order       Int       @default(0)
  
  products    Product[]
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  @@map("product_categories")
}

model Product {
  id              String           @id @default(cuid())
  
  name            String
  slug            String           @unique
  description     String           @db.Text
  shortDescription String?         @db.Text
  
  basePrice       Float
  
  categoryId      String
  category        ProductCategory  @relation(fields: [categoryId], references: [id])
  
  images          Json
  
  stock           Int?
  trackStock      Boolean          @default(false)
  
  active          Boolean          @default(true)
  featured        Boolean          @default(false)
  order           Int              @default(0)
  
  metaTitle       String?
  metaDescription String?
  
  sales           Sale[]
  
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  
  @@index([categoryId])
  @@index([slug])
  @@map("products")
}

model Sale {
  id              String      @id @default(cuid())
  
  productId       String
  product         Product     @relation(fields: [productId], references: [id])
  
  clientName      String
  clientEmail     String
  clientPhone     String
  clientNotes     String?     @db.Text
  
  acceptsNewsletter Boolean   @default(false)
  
  status          SaleStatus  @default(PENDING)
  
  finalPrice      Float?
  
  adminNotes      String?     @db.Text
  
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  completedAt     DateTime?
  cancelledAt     DateTime?
  
  @@index([productId])
  @@index([status])
  @@index([clientEmail])
  @@map("sales")
}

model Newsletter {
  id              String   @id @default(cuid())
  email           String   @unique
  name            String?
  
  source          String
  
  active          Boolean  @default(true)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([email])
  @@map("newsletter")
}

// ‚úÖ NUEVO: Certificaciones
