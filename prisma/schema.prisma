  id          String   @id @default(cuid())
  name        String
  description String?
  imageUrl    String?
  issuer      String?  // Quien lo emiti√≥
  year        Int?
  active      Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("certifications")
}

// ========================================
// ENUMS
// ========================================

enum EventStatus {
  DRAFT
  UPCOMING
  ONGOING
  FINISHED
  CANCELLED
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
  NO_SHOW
}

enum TestimonialStatus {
  PENDING
  APPROVED
  REJECTED
}

enum SaleStatus {
  PENDING
  IN_PROCESS
  COMPLETED
  CANCELLED
}